<body background="back.jpg" >
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="booking-form">
						<div class="form-header">
							<h1>Add a pg</h1>
						</div>
					<form method="POST" id="admin-form" action="/add_pg">

							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">State</span>
										<input name="state" class="form-control" type="text" placeholder="Enter the State">
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">City</span>
										<input name="city" class="form-control" type="text" placeholder="Enter your City">
									</div>
								</div>
							</div>
							<div class="form-group">
								<span class="form-label">Rent</span>
								<input name="rent" class="form-control" type="text" placeholder="Enter rent">
							</div>
							<div class="form-group">
								<span class="form-label">Pin</span>
								<input name="pin" class="form-control" type="tel" placeholder="Enter Unique Pin">
							</div>
							<div class="form-group">
								<span class="form-label">Amenities</span>
								<input name="amenities" class="form-control" type="text" placeholder="Enter Amenities">
							</div>
							<div class="row">
								<div class="col-sm-5">
									<div class="form-group">
										<span class="form-label">Date on which listed</span>
										<input name="date" class="form-control" type="date" required>
									</div>
								</div>
								<div class="col-sm-7">
									<div class="row">
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">Hour</span>
												<select class="form-control" name="hour">
													<option>1</option>
													<option>2</option>
													<option>3</option>
													<option>4</option>
													<option>5</option>
													<option>6</option>
													<option>7</option>
													<option>8</option>
													<option>9</option>
													<option>10</option>
													<option>11</option>
													<option>12</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">Min</span>
												<select class="form-control" name="min">
													<option>05</option>
													<option>10</option>
													<option>15</option>
													<option>20</option>
													<option>25</option>
													<option>30</option>
													<option>35</option>
													<option>40</option>
													<option>45</option>
													<option>50</option>
													<option>55</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
										<div class="col-sm-4">
											<div class="form-group">
												<span class="form-label">AM/PM</span>
												<select class="form-control" name="time">
													<option>AM</option>
													<option>PM</option>
												</select>
												<span class="select-arrow"></span>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="form-btn">
								<button class="submit-btn">ADD PG</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
