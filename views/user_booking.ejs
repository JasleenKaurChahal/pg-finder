<body background="back.jpg" >
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row">
					<div class="booking-form">
						<div class="form-header">
							<h1>CONFIRM BOOKING</h1>
						</div>
					<form method="POST" id="admin-form" action="/requests">

							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">Username</span>
										<input name="uname" class="form-control" type="text" placeholder="Enter the UserName">
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<span class="form-label">Phone No</span>
										<input name="phone" class="form-control" type="text" placeholder="Enter your Phone Number">
									</div>
								</div>
							</div>
							<div class="form-group">
								<span class="form-label">Current Address</span>
								<input name="address" class="form-control" type="text" placeholder="Enter Current Address">
							</div>
							<div class="row">
								<div class="col-sm-5">
									<div class="form-group">
										<span class="form-label">Date of Booking</span>
										<input name="start_date" class="form-control" type="date" required>
									</div>
                                </div>
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <span class="form-label">Date of Leaving</span>
                                            <input name="end_date" class="form-control" type="date" required>
                                        </div>
                                    </div>
                                </div>
							<div class="form-btn">
								<button class="submit-btn">CONFIRM BOOKING</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
